<html>

<head>
    <title><%= pageName %></title>
    <link rel="stylesheet" type="text/css" href="index.css" />
</head>

<body>
    <link href="./index.css">
    <div id="container">
        <div id="menu-bar">
            <div id="file-menu" data-content="file-menu-container">FILE
            

            </div>
            <div id="home-menu" data-content="home-menu-container">Home</div>
            <!-- <div>View</div> -->
            <div id="data-menu" data-content="data-menu-container">Data</div>
            <!-- <div>Help</div>
             -->
        </div>
        <div id="menu-content-container">
            <div class="menu-container" id="file-menu-container">
                <div id="new">New</div>
            <div id="open">Open</div>
            <div id="save">Save</div>

            </div>
            <div class="menu-container" id="home-menu-container">
                <div class="menu-group" id="font-menu-container">
                    <div class="menu-row">
                        <select id="font-family">
                            <option value="Georgia">Georgia</option>
                            <option value="Georgia">Aerail</option>
                            <option value="Georgia">Tohma</option>
                            <option value="Georgia">Impact</option>
                        </select>
                        <select id="font-size">
                            <option value="8">8</option>
                            <option value="10">10</option>
                            <option value="12">12</option>
                            <option value="14">14</option>
                        </select>

                    </div>
                     <div class="menu-row">
                         <input  id="bold" type="button" value="B">
                        <input id="underline" type="button" value="U">
                        <input id="italic" type="button" value="I">
                         <input  id="bg-color" type="color" value="#FFFFFF">
                        <input  id="text-color" type="color" value="#000000">
                     </div>

                </div>
            <div class="menu-group" id="alignment-menu-container">
                <div class="menu-bar">abc</div>
                <div class="menu-bar">def</div>
            </div>
             </div>
            <div class="menu-container" id="data-menu-container">data</div>

        </div>
        <div id="formula-bar">
        <input type ="text" id ="cell">
        <div id= "seperator" >:</div>
        <input type ="text" id ="formula">
        </div>
        <div id="content-container">
            <div id ="tl-cell"></div>
            <div id ="first-row">
                <% for(let j =0;j<cols;j++) { %>
                        <div class="cell"><%= String.fromCharCode('A'.charCodeAt(0) + j ) %></div>
                    
                    <% } %>
                </div>
            <div id ="first-col">
                <% for(let i =0;i<rows;i++) { %>
                    <div class="cell"><%= i +1%></div>
                <% } %>

            </div>
            <div id="grid">
                <% for(let i =0;i<rows;i++) { %>
                    <div class ="row">
                        <% for(let j =0;j<cols;j++) { %>
                            <div class ="cell" contenteditable="true" rid="<%=i%>" cid="<%=j%>"></div>
                        <% } %>
                    </div>

                <% } %>
            </div>
        </div>
        <div id="sheets">
        <div>Sheet 1</div>
        <div id="add">+</div>
        </div>
    </div>
    <script src="./index.js"></script>
</body>

</html>